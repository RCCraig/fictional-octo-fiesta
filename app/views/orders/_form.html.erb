<div class="row">
  <div class="col-sm-8">
    <%= simple_form_for @order do |f| %>
      <%= f.input :place %>  
      <h3>Orders</h3>
      <div id='orders'>
        <%= f.simple_fields_for :items do |item| %>
          <%= render 'item_fields', :f => item %>
        <% end %>
        <div class='links'>
          <%= link_to_add_association 'add order', f, :items %>
          <%= link_to_remove_association "remove order", f, class: "text-danger" %>
        </div>
      </div>
      <%= f.submit 'Save' %>
    <% end %>
    
  </div>
</div>