<div class="container">
  <div class="row">
    <div class="col-sm-4">
      <h2>
        Profile Page for:  <%= @user.email %>
      </h2>
      <div>
        <h3>
          <% @user.groups.each do |group| %>
            <p>
              <%= group.name %>
            </p>
          <% end %>
        </h3>
      </div>
      <p>
        <%= link_to 'Add Group', new_group_path,  class: "nav-link btn btn-success" %>
      </p>
      
    </div>
  </div>
</div>

